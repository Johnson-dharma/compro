{
  "name": "attendance-management-system",
  "version": "1.0.0",
  "description": "Full-stack attendance management system using PERN stack",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "attendance",
    "management",
    "pern",
    "react",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "form-data": "^4.0.4",
    "imagekit": "^6.0.0"
  }
}
